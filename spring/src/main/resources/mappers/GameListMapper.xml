<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.spring.mapper.GameListMapper">

    <resultMap id="GameListEntityResultMap" type="com.ssafy.spring.entity.GameListEntity">
        <id column="game_id" property="gameId"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
    </resultMap>

    <select id="getGameList" resultMap="GameListEntityResultMap">
        SELECT
            game_id,
            title,
            description
        FROM
            game_list
    </select>

    <select id="findGameListByGameId" resultMap="GameListEntityResultMap">
        SELECT
            game_id,
            title,
            description
        FROM
            game_list
        WHERE
            game_id = #{gameId}
    </select>

</mapper>
